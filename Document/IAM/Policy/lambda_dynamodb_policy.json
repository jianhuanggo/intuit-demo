{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "dynamobdb0001",
      "Effect": "Allow",
      "Action": [
        "dynamodb:BatchGet*",
        "dynamodb:DescribeStream",
        "dynamodb:DescribeTable",
        "dynamodb:Get*",
        "dynamodb:Query",
        "dynamodb:Scan",
        "dynamodb:BatchWrite*",
        "dynamodb:CreateTable",
        "dynamodb:Delete*",
        "dynamodb:Update*",
        "dynamodb:PutItem"
      ],
      "Resource": ["arn:aws:dynamodb:*:*:table/st_cpu_stats", "arn:aws:dynamodb:*:*:table/st_disk", "arn:aws:dynamodb:*:*:table/st_memory"]
    }
  ]
}